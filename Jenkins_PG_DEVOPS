pipeline {
        agent {
            label 'master'
        }
        tools {
            maven 'mymaven'
            jdk 'myjava'
        }
    stages {     
        stage ('Checkout the code') {
            steps{
                git branch: 'master', url: 'https://github.com/devopstrainers1/addressbook.git'
            }
        }

        stage ('Code Compile') {
            steps{
                catchError (buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                sh """
                mvn compile
                """
            }
            }
        }

        stage ('Packaging') {
            steps {
                sh """
                mvn package
                """

            }
        }


      }   

}
