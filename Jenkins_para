pipeline {
 agent {
     node {
         label 'master'
     }
 }
 tools {

     maven 'maven3.6'
     jdk 'java'
 }
stages {
    stage ('checkout code from SCM'){
     steps{   

         git branch: 'master', url: 'https://github.com/devopstrainers1/addressbook.git'

      }
    }

    stage ('User goal ${ goal } '){
        steps{
            sh """
            mvn ${ goal }
            """
        }

    }

}
}
